name: Check Kotlin CLI Commands

on: [push, pull_request]

jobs:
  test-kotlin-cli:
    runs-on: windows-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Install SDKMAN and Kotlin
        shell: bash
        run: |
          curl -s "https://get.sdkman.io" | bash
          source "$HOME/.sdkman/bin/sdkman-init.sh"
          sdk install kotlin
          echo "$HOME/.sdkman/candidates/kotlin/current/bin" >> $GITHUB_PATH

      - name: Verify Kotlin Binaries Exist
        shell: pwsh
        run: |
          Get-Command kotlin, kapt, kotlinc, kotlinc-jvm, kotlinc-js -ErrorAction SilentlyContinue | Format-Table

      - name: Run CLI Tests
        shell: pwsh
        run: |
          Describe "Kotlin CLI Checks" {
              It "kapt" {
                  "kapt -version" | Should -ReturnZeroExitCode
              }

              It "kotlin" {
                  "kotlin -version" | Should -ReturnZeroExitCode
              }

              It "kotlinc" {
                  "kotlinc -version" | Should -ReturnZeroExitCode
              }

              It "kotlinc-jvm" {
                  "kotlinc-jvm -version" | Should -ReturnZeroExitCode
              }

              It "kotlinc-js" {
                  "kotlinc-js -version" | Should -ReturnZeroExitCode
              }
          }
        env:
          PATH: ${{ env.PATH }} # include kotlin in path
